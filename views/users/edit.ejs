<%- include('../partials/header') %>
<script src="//widget.cloudinary.com/global/all.js" type="text/javascript"></script>
  <div class = 'container'>
    <div class= 'row'>
      <div class=".mediumScreen">
        <main class = 'card'>
          <form method="POST" action="/users/<%= user.username %>?_method=PATCH">
            <label for="name">Name:</label>
            <input type="text" name="name"
            <% if (user.name) { %>
              value="<%= user.name %>"
            <% } %>
            >
            <label for="username">Username:</label>
            <input type="text" name="username"
            <% if (user.username) { %>
              value="<%= user.username %>"
            <% } %>
            >
            <label for="email">E-mail Address:</label>
            <input type="text" name="email"
            <% if (user.email) { %>
              value="<%= user.email %>"
            <% } %>
            >
            <label for="location">Location:</label>
            <input type="text" name="location"
            <% if (user.location) { %>
              value="<%= user.location %>"
            <% } %>
            >
            <a href="#" id="upload_widget_opener"><i class="material-icons">add_to_photos</i>Set Profile Picture</a>
            <button type="submit" class ="btn light-green lighten-1">Edit Information</button>
          </form>
        </main>
      </div>
    </div>
  </div>
  <script type="text/javascript">
  document.getElementById("upload_widget_opener").addEventListener("click", function() {
    cloudinary.openUploadWidget({ cloud_name: 'dcc5vb7ot', upload_preset: 'ft2wpaew'},
    function(error, result) { console.log(error, result) });
  }, false);
  </script>
  <%- include('../partials/footer') %>
