<%- include('partials/header') %>

<main class = 'container'>
  <div class= 'row'>
    <% recipes.forEach((recipe) => { %>
      <!--container card -->
      <div class = 'card'>
        <div class = 'row valign-wrapper'>
          <div class = 'col s2 valign'>
            <img class='profilePicture' src="https://assets.merriam-webster.com/mw/images/article/art-wap-article-main/puppy-3143-7cfb4d6a42dfc7d9d1ae7e23126279e8@1x.jpg" alt="User Profile Picture" style="width:50px;height:50px;">
          </div>
          <div class = 'col s6'>
            <h5><a href="/recipes/<%=recipe.id%>" class="black-text"><%= recipe.name %></a></h5> <br>
            <a href="/recipes/<%= recipe.id %>/addFavorite"><i class="material-icons black-text" id="favorite">favorite</i></a>
            <a href="/recipes/<%= recipe.id %>/upvote"><i class="material-icons black-text" id="upvote">thumb_up</i></a>
          </div>
          <div class = 'col s4 valign'>
            <img src="<%= recipe.recipe_pic_url %>" alt="Recipe Photo" class="right" style="width:150px;">
          </div>
        </div>
      </div>
    <% }) %>
</main>

<%- include('partials/footer') %>
